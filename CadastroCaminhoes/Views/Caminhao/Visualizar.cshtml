@model VisualizarViewModel

<h3>Visualizar</h3>
<hr />

@if (ViewData["mensagem"].Equals("1"))
{
<div class="alert alert-success alert-dismissible show" role="alert">
    <strong>Operação realizada com sucesso!</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-12">

            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Nome</th>
                        <th scope="col" class="text-center">Modelo</th>
                        <th scope="col" class="text-center">Ano de fabricação</th>
                        <th scope="col" class="text-center">Ano modelo</th>
                        <th scope="col" class="text-center">Ação</th>
                        <th scope="col" class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var caminhao in Model.listaCaminhao)
                    {
                    <tr>
                        <th scope="row" class="text-center">@caminhao.nome</th>
                        <td class="text-center">@caminhao.caminhaoModelo.sigla</td>
                        <td class="text-center">@caminhao.anoFabricacao</td>
                        <td class="text-center">@caminhao.anoModelo</td>
                        <td class="text-center">
                            <a class="btn btn-success" href="/Caminhao/Cadastro/@caminhao.id">
                                Alterar
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-danger" onclick="return confirm('O registro será excluído!')" href="/Caminhao/Excluir/@caminhao.id">
                                Excluir
                            </a>
                        </td>
                    </tr>}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-center">
                            <span numero-itens>
                                Total: @(Model.TotalCaminhao) caminhões
                            </span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
